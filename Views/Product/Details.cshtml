@model baitapltw.Models.Product

@{
    ViewBag.Title = "Details";
}


<div class="contact_section layout_padding">
    <div class="container">
        <div class="contact_section_2">
            <div class="row">
                <div class="col-md-6">
                    <div class="mail_section_1">
                        <div class="card" style="width: 18rem;">

                            <div class="card-body">
                                <h5 class="card-title">@Model.Title</h5>
                                <p class="card-text">@Model.Des</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@Model.Id</li>
                                <li class="list-group-item">@Model.Price</li>
                                <li class="list-group-item">@Model.Category.Title</li>
                            </ul>
                            <div class="card-body">
                                <a href="#" class="card-link">@baitapltw.Ultils.Ultils.NumberToText((double)Model.Price)</a>
                            </div>
                        </div>
                        <div class="send_bt"><a href="#">Đặt Hàng</a></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_main">
                        <div class="map-responsive">
                            <img src="@Model.FeatureImage" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="~/Home"><----Back</a>
